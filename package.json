{
  "version": "0.0.0",
  "name": "web-blob",
  "description": "Web API compatible Blob implementation",
  "keywords": [
    "blob",
    "typed",
    "flow"
  ],
  "main": "require.js",
  "module": "blob.js",
  "author": "Irakli Gozalishvili <rfobic@gmail.com> (https://gozala.io)",
  "repository": "https://github.com/Gozala/web-blob",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@babel/register": "7.4.0",
    "alias-quokka-plugin": "^0.1.0",
    "blue-tape": "^1.0.0",
    "documentation": "^10.0.0",
    "esm": "3.2.22",
    "flow-bin": "0.97.0",
    "flow-copy-source": "^2.0.1",
    "git-validate": "2.2.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.9.2",
    "rollup": "1.10.0",
    "rollup.config.flow": "4.0.0",
    "source-map-support": "0.5.12"
  },
  "scripts": {
    "check": "flow check",
    "test": "blue-tape -r esm 'test/**/*.js'",
    "build:api": "documentation readme --section=API src/web-blob",
    "build:docs": "documentation build --document-exported src/** -f html --o docs",
    "validate": "npm run check && npm run test",
    "prepublishOnly": "npm run verify",
    "precommit": "lint-staged"
  },
  "pre-push": [
    "validate"
  ],
  "lint-staged": {
    "*.js": [
      "prettier --no-semi --write",
      "git add"
    ]
  },
  "quokka": {
    "alias": {
      "undefined": "src/web-blob"
    },
    "pro": true,
    "babel": {
      "env": "development"
    },
    "plugins": [
      "alias-quokka-plugin"
    ]
  },
  "dependencies": {
    "web-streams-polyfill": "2.0.3"
  }
}
